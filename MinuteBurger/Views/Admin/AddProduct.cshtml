@model MinuteBurger.Models.Product


<style>
    body {
        background-image: url('/images/burger.jpeg'); /* Correct path to your image */
        background-size: cover; /* Cover the entire body */
        background-position: center; /* Center the background image */
        background-repeat: no-repeat; /* Prevent tiling */
        height: 100vh; /* Make sure body takes full height */
        margin: 0; /* Remove default margin */
    }

    .form-container {
        max-width: 400px; /* Set a max width for the form container */
        margin-left: 0; /* Center the container horizontally */
        padding: 20px; /* Add some padding */
        border: 1px solid #ccc; /* Optional: Add a border for better visibility */
        border-radius: 5px; /* Optional: Rounded corners */
        background-color: #f9ddb1; /* Optional: Light background color */
    }

    .mb-3 {
        margin-bottom: 15px; /* Set bottom margin for form groups */
    }

    .form-control {
        width: 100%; /* Ensure inputs take full width */
    }
</style>

<body>
    <div class="form-container">
        <h2 class="text-center">Add New Product</h2>
        <form method="post" asp-action="AddProduct">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Category" class="form-label"></label>
                <select asp-for="Category">
                    <option>BigTime</option>
                    <option>Beverages</option>
                    <option>Burgers</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StockQuantity" class="form-label"></label>
                <input asp-for="StockQuantity" class="form-control" required />
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label"></label>
                <input asp-for="ImageUrl" class="form-control" required />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="ProductId" />

            <button type="submit" class="btn btn-primary">Save</button>
        </form>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
    
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
