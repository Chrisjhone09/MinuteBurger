@model MinuteBurger.Models.ProductViewModel
<style>
    .form-container {
        max-width: 400px; /* Set a max width for the form container */
        padding: 20px; /* Add some padding */
        border: 1px solid #ccc; /* Optional: Add a border for better visibility */
        border-radius: 5px; /* Optional: Rounded corners */
        background-color: #f9ddb1; /* Optional: Light background color */
        margin: 50px auto; /* Center horizontally and add margin from top */
    }

    .form-control {
        width: 100%; /* Ensure inputs take full width */
    }

    .categoryAndPrice {
        display: flex;
        justify-content: space-between;
    }

        .categoryAndPrice .mb-3, .categoryAndPrice .mb-1 {
            flex: 1;
            margin-right: 10px;
        }

        .categoryAndPrice .mb-1 {
            margin-right: 0;
        }
</style>

<div class="container">
    <div class="form-container">
        <h2 class="text-center">Edit Product</h2>
        <form method="post" asp-action="AddProduct" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Product.Name" class="form-label"></label>
                <input asp-for="Product.Name" class="form-control" required />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Product.Description" class="form-label"></label>
                <textarea asp-for="Product.Description" class="form-control" required></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="categoryAndPrice">
                <div class="mb-3">
                    <label asp-for="Product.Category" class="form-label"></label>
                    <select asp-for="Product.Category" class="form-control">
                        <option>BigTime</option>
                        <option>Beverages</option>
                        <option>Burgers</option>
                    </select>
                    <span asp-validation-for="Product.Category" class="text-danger"></span>
                </div>
                <div class="mb-1">
                    <label asp-for="Product.Price" class="form-label"></label>
                    <input asp-for="Product.Price" class="form-control" required />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Product.StockQuantity" class="form-label"></label>
                <input asp-for="Product.StockQuantity" class="form-control" required />
                <span asp-validation-for="Product.StockQuantity" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Image" class="form-label">Upload Image</label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <input readonly asp-for="Product.ProductId"/>

            <button type="submit" class="btn btn-primary">Save</button>
        </form>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
