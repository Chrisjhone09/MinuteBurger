@model List<Product>
@{
    
}
<div class="container mt-4">
    <h2>Product List</h2>
    <a class="btn btn-primary" asp-action="AddProduct">Add Product</a>
    <a class="btn btn-secondary" asp-action="VoucherList">Vouchers</a>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Product Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Available Stock</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.ProductId</td>
                    <td>@obj.Name</td>
                    <td>@obj.Description</td>
                    <td>@string.Format("{0:C}", obj.Price)</td>
                    <td>@obj.StockQuantity</td>
                    <td><img src="@ViewBag.ImageUrl" alt="Uploaded Image" style="max-width: 300px;" /></td>
                    <td>
                        <a class="btn btn-primary" asp-action="EditView" asp-route-id="@obj.ProductId">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
