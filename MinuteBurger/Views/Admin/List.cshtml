@model MinuteBurger.Entities.SortAndList
@{

}
<div class="container mt-4">
	<h2>Product List</h2>
	<a class="btn btn-primary" asp-action="AddProduct">Add Product</a>
	<a class="btn btn-secondary" asp-action="VoucherList">Vouchers</a>

	<form method="get" asp-action="Sort">
		<input asp-for="SearchString" />
		<button type="submit">Search</button>
	</form>

	<table class="table table-striped table-bordered">
		<thead class="table-dark">
			<tr>
				<th>Product Id</th>
				<th>Name</th>
				<th>Description</th>
				<th>Price</th>
				<th>Available Stock</th>
				<th>Image</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.Products)
			{

				<tr>
					@if (obj != null)
					{
						<td>@obj.ProductId</td>
						<td>@obj.Name</td>
						<td>@obj.Description</td>
						<td>@string.Format("{0:C}", obj.Price)</td>
						<td>@obj.StockQuantity</td>
						<td><img src="@obj.ImageUrl" alt="Uploaded Image" style="max-width: 300px;" /></td>
						<td>
							<a class="btn btn-primary" asp-action="Edit" asp-route-id="@obj.ProductId">Edit</a>
							<a class="btn btn-danger" asp-action="Delete" asp-route-id="@obj.ProductId">Delete</a>
						</td>
					}
					else
					{
						<td colspan="7"><i>Empty List</i></td>
					}
				</tr>
			}


		</tbody>
	</table>
</div>
