@model List<Product>
<style>
	.filters {
		display: flex;
		justify-content: center;
		gap: 10px;
		margin-bottom: 20px;
		margin-top: 20px;
	}
	.card-container {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;
		gap: 20px;
		padding: 20px;
	}

	.card {
		width: 20rem;
		height: 22rem;
	}

	.anchor-card {
		text-decoration: none;
	}
</style>
<div class="filters">
	<form asp-action="BigTimeFilter" method="get">
		<button type="submit" class="btn btn-primary">BigTime</button>
	</form>
	<button type="button" class="btn btn-primary">Link</button>
	<button type="button" class="btn btn-primary">Link</button>
</div>
<div class="card-container">
	@foreach (var obj in Model)
	{
		<a class="anchor-card" asp-route-id="@obj.ProductId" asp-action="Item">
			<form>
				<div class="card border-primary mb-3">
					<div class="card-header">@obj.Category</div>
					<div class="card-body">
						<img src="@obj.ImageUrl" alt="Uploaded Image" style="max-width: 300px;" />
						<h4 class="card-title">@obj.Name</h4>
						<p>₱@obj.Price</p>
					</div>
				</div>
			</form>
		</a>
	}
</div>
