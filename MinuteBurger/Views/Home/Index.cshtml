@model List<Product>
@{
	ViewData["Title"] = "Home Page";
}
<style>
		

	.card-container {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		align-items: center;
		gap: 20px;
		padding: 20px;
	}

	.card {
		width: 20rem;
		height: 22rem;
	}
	.anchor-card{
		text-decoration:none;
	}
</style>
<a asp-action="ShoppingCart">Cart</a>
<div class="card-container">
	@foreach (var obj in Model)
	{
		<a class="anchor-card" asp-route-id="@obj.ProductId" asp-action="Item">
			<form>
				<div class="card border-primary mb-3">
					<div class="card-header">@obj.Category</div>
					<div class="card-body">
						<img src="@obj.ImageUrl" alt="Uploaded Image" style="max-width: 300px;" />
						<h4 class="card-title">@obj.Name</h4>
						<p>₱@obj.Price</p>
					</div>
				</div>
			</form>
		</a>
	}
</div>
